<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/border_grid">

    <ImageView
        android:layout_marginLeft="35dp"
        android:padding="10dp"
        android:id="@+id/imgProduct"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/txtNameProduct"
        android:layout_marginStart="20dp"
        android:text="Tên"
        android:textStyle="bold"
        android:textColor="#A30505"
        android:textSize="25sp"
        android:layout_below="@id/imgProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtPrice"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtNameProduct"
        android:layout_marginRight="20dp"
        android:text="Giá đó nha"
        android:textColor="#173397"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SL: 10"
        android:textSize="16sp"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@+id/txtPrice"
        android:layout_below="@+id/txtNameProduct"/>

</RelativeLayout>