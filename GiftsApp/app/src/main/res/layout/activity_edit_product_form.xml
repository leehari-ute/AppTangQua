<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="17"
        android:background="#41A58B8B"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_header"
                android:src="@drawable/product1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_addsp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTensp"
                android:layout_width="200dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/edtNameProduct"
                android:text="Tên sản phẩm" />

            <EditText
                android:id="@+id/edtNameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgProduct"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập tên sản phẩm"
                android:inputType="text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_addsp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtObject"
                android:layout_marginStart="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đối tượng"/>

            <Spinner
                android:id="@+id/spnObject"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_addsp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtOccasion"
                android:layout_marginStart="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dịp"/>

            <Spinner
                android:id="@+id/spnOccasion"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_addsp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtHoliday"
                android:layout_marginStart="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ngày lễ"/>

            <Spinner
                android:id="@+id/spnHoliday"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_addsp"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="100dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Mô tả"/>

            <EditText
                android:id="@+id/edtDesProduct"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/imgProduct"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập mô tả sản phẩm"
                android:inputType="text" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_addsp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Số lượng"/>

            <EditText
                android:id="@+id/edtQuantity"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_addsp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Giá"/>

            <EditText
                android:id="@+id/edtPrice"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Lưu"/>

    </LinearLayout>
</ScrollView>
