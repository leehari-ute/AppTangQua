<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4DFFFFFF"
            android:orientation="vertical"
            android:verticalScrollbarPosition="right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Hello! "
                android:textAlignment="viewStart"
                android:textColor="#2C4CC3"
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="SignUp to Get Started"
                android:textAlignment="viewStart"
                android:textColor="#2C4CC3"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/avaboy" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/avagirl" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rdGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <RadioButton
                        android:id="@+id/rdBtnMale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41dp"
                        android:layout_weight="1"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/rdBtnFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:text="Female" />

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/txtFullName"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Full name"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="355dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/border"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="355dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="giftsapp@gmail.com"
                android:inputType="textWebEmailAddress"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtPassword"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Password"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="355dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imgShowHidePass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-30dp"
                    android:layout_marginTop="20dp"
                    android:alpha=".5"
                    android:onClick="ShowHidePass"
                    android:src="@drawable/invisible_password_2" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Phone"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="355dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/border"
                android:ems="10"
                android:inputType="phone" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="30dp"
                android:text="Sign Up"
                android:textSize="20sp"
                app:backgroundTint="#2C4CC3"
                app:backgroundTintMode="screen" />

            <TextView
                android:id="@+id/txtLoginHere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Already have account? Login here"
                android:textColor="#072A91"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>